{
  "manifest_version": 3,
  "version": "1",
  "name": "Actions",
  "description": "This extension is made for quickly editing and previewing webpages built with Sitefinity CMS.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/action-16.png",
      "32": "icons/action-32.png",
      "48": "icons/action-48.png",
      "128": "icons/action-128.png"
    }
  },
  "permissions": ["activeTab"],
  "icons": {
    "16": "icons/action-16.png",
    "32": "icons/action-32.png",
    "48": "icons/action-48.png",
    "128": "icons/action-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": ""
}
